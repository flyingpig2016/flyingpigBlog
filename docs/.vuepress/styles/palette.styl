$backgroundColor = #283149
$accentColor = #f73859
$textColor = #ffffff
$borderColor = #dbedf3
$codeBgColor = #404b69

html, body {
  width 100% !important
  height 100% !important
  background-color $backgroundColor!important
}
h1, h2, h3, h4{
  text-shadow 2px 3px 5px black
}
pre{
  box-shadow 0 0  5px black inset;
  text-shadow 2px 3px 3px $backgroundColor
}
.string{
  color #BEE58D!important
}
.operator{
  color #C792EA!important
}
.punctuation{
  color #89DAF3!important
}
.boolean{
  color #FF536A!important
}
.function{
  color #82AAF3!important
}
.attr-name{
  color #C792EA!important
}
code{
  background-color $codeBgColor!important;
}

.navbar {
  background-image linear-gradient(10deg,$accentColor, rgb(38, 144, 249)) !important
  border-style none !important
  .logo{
    border-radius:50%;
  }
}

.links {
  background-color transparent !important
}
.search-box input{
  color $codeBgColor!important
}
.suggestions{
  background-color $codeBgColor!important
}
.sidebar {
  background-color $backgroundColor!important
}

.hero  {
  img{
    width :150px;
    height: 150px;
    border-radius: 50%;
    margin-top: 2rem !important;
    box-shadow: 0 0 20px $borderColor;
  }
  #main-title{
    margin: 1rem auto !important;
  }
  .action-button{
    font-size:1rem !important;
    padding:0.5rem 1rem !important;
  }
}


tr:nth-child(2n) {
    background-color: $codeBgColor;
}

th, td {
  min-width: 70px;
}
td {
  background-color $backgroundColor!important
}
/*---滚动条默认显示样式--*/
::-webkit-scrollbar-thumb {
  background-color: $borderColor;
  height: 5px;
  outline-offset: -2px;
  outline: 2px solid #fff;
  -webkit-border-radius: 8px;
  transition all .3s
  /*border: 2px solid #fff;*/
}

/*---鼠标点击滚动条显示样式--*/
::-webkit-scrollbar-thumb:hover {
  background-color: $accentColor;
  height: auto;
  -webkit-border-radius: 2px;
}

/*---滚动条大小--*/
::-webkit-scrollbar {
  width: 6px;
  height: 8px;
}

/*---滚动框背景样式--*/
::-webkit-scrollbar-track-piece {
  background-color: transparent;
  -webkit-border-radius: 0;
}
